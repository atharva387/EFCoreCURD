@model IEnumerable<EFCoreCURD.Models.Employee>
@{
    ViewData["Title"] = "Employees";
    var departments = ViewBag.Departments as List<EFCoreCURD.Models.Department>;
}

<h1>Employees</h1>

<!-- Buttons -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
    <a asp-controller="Department" asp-action="Create" class="btn btn-success">Add New Department</a>
</p>

<!-- EMPLOYEE TABLE -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Emp No</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Job</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.EmployeeNumber</td>
                <td>@e.EmployeeName</td>
                <td>@e.Salary</td>
                <td>@e.Job</td>
                <td>@e.DepartmentName</td>
                <td style="white-space:nowrap">
                    <a asp-action="Edit" asp-route-id="@e.EmployeeNumber" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@e.EmployeeNumber" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ DEPARTMENT SECTION -->
<h2 class="mt-5">Departments</h2>
@if (departments != null && departments.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Department Name</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in departments)
            {
                <tr>
                    <td>@d.DepartmentId</td>
                    <td>@d.DepartmentName</td>
                    <td>@d.Location</td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-controller="Department" asp-action="Index" class="btn btn-outline-primary">View All Departments</a>
    </p>
}
else
{
    <p class="text-muted">No departments found.</p>
}

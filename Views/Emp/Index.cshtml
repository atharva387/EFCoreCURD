@model IEnumerable<EFCoreCURD.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}
<h1>Employees</h1>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Emp No</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Job</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.EmployeeNumber</td>
                <td>@e.EmployeeName</td>
                <td>@e.Salary</td>
                <td>@e.Job</td>
                <td>@e.DepartmentName</td>
                <td style="white-space:nowrap">
                    <a asp-action="Edit" asp-route-id="@e.EmployeeNumber" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@e.EmployeeNumber" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<EFCoreCURD.Models.Department>

<h2>Departments</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.DepartmentId</td>
                <td>@d.DepartmentName</td>
                <td>@d.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@d.DepartmentId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@d.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
